{
	"manifest_version": 2,
	"name": "Anime Logger",
	"version": "1.3",
	"description": "A web extension that helps you log the anime episode you're at while on a streaming site.",
	"icons": {
		"32": "icons/icon.png",
		"120": "icons/icon-120.png"
	},
	"background": {
		"scripts": [
			"/src/background-script.js"
		]
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"activeTab",
		"webNavigation",
		"storage",
		"unlimitedStorage"
	],
	"options_ui": {
		"page": "/src/settings.html"
	},
	"browser_action": {
		"browser_style": true,
		"default_icon": {
			"16": "icons/icon.png",
			"32": "icons/icon.png",
			"120": "icons/icon-120.png"
		},
		"default_title": "Anime Logger",
		"default_popup": "/src/popup.html"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{57c65d62-277d-4048-b733-0e48bdbcaabd}"
		}
	}
}